{
  "name": "SANbase",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "REACT_APP_VERSION=$(node -pe 'require(\"./package.json\").version')-$(echo $GIT_HEAD) react-scripts start",
    "format": "prettier-standard 'src/**/*.js'",
    "precommit": "lint-staged",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "build": "REACT_APP_VERSION=$(node -pe 'require(\"./package.json\").version')-$(echo $GIT_HEAD) react-scripts build",
    "test:lint:css": "yarn stylelint src/*{sass,scss} --syntax scss --fix",
    "test:js": "react-scripts test --testPathIgnorePatterns='e2e.*'",
    "test:e2e": "react-scripts test --testPathPattern='e2e.*'",
    "test": "npm run test:lint:css && CI=true npm run test:js",
    "eject": "react-scripts eject"
  },
