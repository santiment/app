    "stylefmt": "^6.0.3",
    "stylelint": "^9.5.0",
    "stylelint-config-standard": "^18.2.0",
    "why-did-you-update": "^0.1.1"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "src/serviceWorker.js",
      "build"
    ]
  },
  "lint-staged": {
    "linters": {
      "src/**/*.js": [
        "yarn format",
        "git add"
      ],
      "*.{sass,scss,css}": [
        "yarn stylefmt",
        "yarn stylelint src/*{sass,scss} --syntax scss --fix",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit",
      "pre-push": "yarn test"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
