+  }
+
+  const IMG_SRC_ATTR_START = 'src="'
+  const IMG_SRC_ATTR_START_LENGTH = IMG_SRC_ATTR_START.length
+  function grabFirstImageLink(text) {
+    const start = text.indexOf(IMG_SRC_ATTR_START)
+
