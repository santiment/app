+      {#if isSearching}
+        Searching...
+      {:else}
+        {#each suggestions as item, i (item.id)}
+          <a
+            href={getLink(item)}
+            class="btn-ghost"
+            class:cursored={i === cursor}
+            on:mousedown={onMouseDown}
+          >
+            {item.title}
+          </a>
+        {:else}
+          No results found
+        {/each}
+      {/if}
+    </div>
+  {/if}
+</InputWithIcon>
